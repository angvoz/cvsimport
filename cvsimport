#!/bin/sh
module=$1 ; shift
dir=`dirname $0`
PATH=`realpath $dir`:$PATH
export TZ=America/Los_Angeles
#export TMPDIR=$PWD
if [[ -z $module ]] ; then
	echo "Usage: $0 MODULE [ARGS]"
fi
if [[ -f author.ids ]] ; then
	authors=author.ids
elif [[ -f $dir/author.ids ]] ; then
	authors=$dir/author.ids
fi
repo=CVS/$module
if [[ -d $repo ]] ; then
	echo "Updating $module..."
else
	echo "Importing $module..."
	initial=1
fi
if [[ -f $module.opts ]] ; then
	set -- `< $module.opts` "$@"
fi
git-cvsimport -C $repo -o master -i -k -z 300 -M '^Merge:\s+(?:[A-Za-z][A-Za-z0-9_-]*\s+)?([A-Za-z][A-Za-z0-9_-]*)\s*(?:$|\n)' ${authors:+-A $authors} -R "$@" $module >> $repo.log 2>&1
